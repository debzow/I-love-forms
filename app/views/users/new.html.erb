<h1>Page Creation User</h1>


<%= form_for @user do |f| %>
  <div class="form-row">
    <div class="form-group col-md-2">
      Ton Prénom : <%= f.text_field :username, class: 'form-control',  placeholder: 'Jaja' %>
    </div>
    <div class="form-group col-md-2">
    Ton email : <%= f.text_field :email, class: 'form-control', placeholder: 'par@example.com' %>
    </div>
  </div>
  <div class="form-group col-md-4">
    Une description : <%= f.text_area :bio, class: 'form-control', placeholder: 'Parles nous de toi!' %>
  </div>

    <%= f.submit class: 'btn btn-primary' %>

<% end %>



